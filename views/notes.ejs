<body>
    <div class="card text-center">
        <%- include("partials/header"); -%>
        <div class="card-body">
                <h2>Notes</h2>
                <br/>
                <form action="/invoicing/notes" method="POST">
                    <textarea name="data" rows="15" cols="120" required >
                        <%=note.data%>
                    </textarea>
                        <div class="text-center mb-3 mt-3">
                        <button class="btn btn-primary" style="width: 5rem" type="submit">SUBMIT</button>
                    </div>
                </form>
        </div>
    </div>
